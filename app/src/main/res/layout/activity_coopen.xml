<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    tools:viewBindingIgnore="true"
    tools:context="com.example.mycloudmusic.activity.InitCoopenActivity">

    <ImageView
        android:id="@+id/image_coopen_bottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/rv_coopen_bottom" />

    <RelativeLayout
        android:id="@+id/rv_coopen_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="20dp">

        <com.example.mycloudmusic.view.InitCoopenView
            android:id="@+id/icv_coopen_bottom"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:layout_marginStart="10dp" />

        <TextView
            android:id="@+id/tv_coopen_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@+id/icv_coopen_bottom"
            android:text="@string/cloudmusic"
            android:textColor="@android:color/white"
            android:textSize="19sp"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/icv_coopen_bottom"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@+id/icv_coopen_bottom"
            android:text="你那么孤独，却说一个人真好。"
            android:textColor="@android:color/darker_gray"
            android:textSize="13sp" />
    </RelativeLayout>
</RelativeLayout>